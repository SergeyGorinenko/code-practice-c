{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build full project",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-stdlib=libc++",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/Leetcode/Array/*.cpp",
                "${workspaceFolder}/src/utils/*.cpp",
                "-I${workspaceFolder}/src/Leetcode/Array",
                "-I${workspaceFolder}/src/utils",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/clang++"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "${workspaceFolder}/src/utils/*.cpp",
                "-I${workspaceFolder}/src/utils",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}